@page
@model library.Pages.Genres.ShowGenres

@{
    Layout = "Shared/_Layout";
    ViewData["Title"] = "Gatunki";
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>

<div class="row">
    <table class="table-striped">
        <thead>
        <tr>
            <th>Gatunek</th>
            <th>Opis</th>
        </tr>
        </thead>>
        <tbody>
        @foreach (var item in Model.Genres)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>@item.Description</td>
            </tr>
        }
        </tbody>
    </table>
    <form method="post">
        <input type="button" class="btn btn-primary" value="Dodaj nowy"/>
        </form>
</div>
</body>
</html>