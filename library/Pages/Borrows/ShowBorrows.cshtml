@page
@model library.Pages.Borrows.ShowBorrows

@{
    Layout = "Shared/_Layout";
    ViewData["Title"] = "Rezerwacje";
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
@{await Html.RenderPartialAsync("_NavigationPartial");}
<div>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Tytuł</th>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Data wypożyczenia</th>
            <th>Data oddania</th>
            <th>Termin oddania</th>
        </tr>
        </thead>>
        <tbody>
        @foreach (var item in Model.BorrowViews)
        {
            <tr>
                <td>
                    @item.Title
                </td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.BorrowDate.ToString("MM/dd/yyyy")</td>
                <td>@item.ReturnDate?.ToString("MM/dd/yyyy")</td>
                <td>@item.DueDate.ToString("MM/dd/yyyy")</td>
            </tr>
        }
        </tbody>
    </table>
</div>
</body>
</html>