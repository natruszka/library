@page
@model library.Pages.Books.NewBook

@{
    Layout = "Shared/_Layout";
    ViewData["Title"] = "Nowa książka";
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
@{await Html.RenderPartialAsync("_NavigationPartial");}
<div>
    <form method="post">
        <input type="text" placeholder="Tytuł" name="Title" class="form-control" required="required"/>
        <input type="text" placeholder="Imię autora" name="AuthorName" class="form-control" required="required"/>
        <input type="text" placeholder="Nazwisko autora" name="AuthorSurName" class="form-control" required="required"/>
        <input type="text" placeholder="Gatunek" name="Genre" class="form-control" required="required"/>
        <input type="text" placeholder="Wydawnictwo" name="Publisher" class="form-control" required="required"/>
        <input type="number" placeholder="Edycja" name="Edition" class="form-control" min="1" max="50" required="required"/>
        <input type="text" placeholder="Isbn" name="Isbn" class="form-control" required="required"/>
        <input type="submit" class="btn btn-primary" value="Dodaj"/>
    </form>
</div>
</body>
</html>