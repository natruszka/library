@page
@model library.Pages.Books.BookDetails

@{
    Layout = "Shared/_Layout";
    ViewData["Title"] = "Detale";
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
@{await Html.RenderPartialAsync("_NavigationPartial");}
<div>
    <table class="table table-striped">
            <thead>
            <tr>
                <th scope="col">Tytuł</th>
                <th scope="col">Imie Autora</th>
                <th scope="col">Nazwisko Autora</th>
                <th scope="col">Gatunek</th>
                <th scope="col">Wydawnictwo</th>
                <th scope="col">Edycja</th>
                <th scope="col">ISBN</th>
            </tr>
            </thead>>
            <tbody>
            <tr>
                <td>@Model.BookMoreInfos.First().Title</td>
                <td>@Model.BookMoreInfos.First().Author.FirstName</td>
                <td>@Model.BookMoreInfos.First().Author.LastName</td>
                <td>@Model.BookMoreInfos.First().GenreName</td>
                <td>@Model.BookMoreInfos.First().PublisherName</td>
                <td>@Model.BookMoreInfos.First().Edition</td>
                <td>@Model.BookMoreInfos.First().Isbn</td>
            </tr>
            </tbody>
    </table>
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">Opinia</th>
            <th scope="col">Treść</th>
            <th scope="col">Użytkownik</th>
        </tr>
        </thead>>
        <tbody>
        @foreach (var item in Model.BookMoreInfos)
        {
            <tr>
                <td>@item.Rating</td>
                <td>@item.ReviewText</td>
                <td>@item.Username</td>
            </tr>
        }
        </tbody>
    </table>
</div>
</body>
</html>